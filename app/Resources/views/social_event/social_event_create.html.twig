{% extends 'adminBase.html.twig' %}

{% block title %}
    Nytt Arrangement
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.16/jquery.datetimepicker.min.css">
{% endblock %}

{% block breadcrumb %}

    {% if event.id %}
        {# TODO: FIX THIS #}
        <li class="breadcrumb-item">
            <a href="{{ path('social_event_show') }}">Arrangementer</a>
        </li>
        <li class="breadcrumb-item active">{{ event.title }}</li>
    {% else %}
        <li class="breadcrumb-item">
            <a href="{{ path('social_event_show') }}">Arrangementer</a>
        </li>
        <li class="breadcrumb-item active">Nytt arrangement</li>
    {% endif %}

{% endblock %}


{% block body %}
    {{ form_start(form) }}

    <div class="row">
        <div class="col-12 col-xl-10 col-xxl-8 col-xxxl-6">
            <div class="card">
                <div class="card-header"><i class="fa fa-comment-o"></i> Arrangement</div>
                <div class="card-body">
                    {{ form_row(form.title) }}
                    {{ form_row(form.description ) }}

                    {{ form_row(form.start_time) }}
                    {{ form_row(form.end_time) }}



                    <!--// Continue from here           -->
                    {{ form_row(form.semester) }}
                    {{ form_row(form.department) }}


                </div>
            </div>


            <div class="card">
                <div class="card-body">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}



                    <a href="{{ path('social_event_show', {'department': department.id, 'semester': semester.id}) }}">
                        <button type="button" class=" btn btn-primary">Avbryt</button>
                    </a>
                </div>
            </div>
            <div class="hide">
                {{ form_rest(form) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}


{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.16/jquery.datetimepicker.full.min.js"></script>
    <script>
        const options = {
            format: 'd.m.Y H:i',
            lang: 'no',
            step: 5,
        };

        jQuery('#{{ form.start_time.vars.id }}').datetimepicker(options);
        jQuery('#{{ form.end_time.vars.id }}').datetimepicker(options);
    </script>
{% endblock %}